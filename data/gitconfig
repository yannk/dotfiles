[user]
	name = Yann Kerherv√©
	email = yann.kerherve@gmail.com

[include]
    path = ~/.gitlocal

[includeIf "gitdir:**/*.apple.com/"]
    path = ~/.gitconfig-apple

[color]
    diff = auto
    status = auto
    branch = auto

[color "diff"]
    meta = yellow
    frag = cyan
    old = red
    new = green
    whitespace = red reverse

[alias]
    st = status -sb
    stn = status -uno
    ci = commit
    co = checkout
    di = diff
    pr = pull --rebase
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    hist = log --all --graph --pretty
    # http://gitster.livejournal.com/45019.html
    wsadd = "!sh -c 'git diff -- \"$@\" | git apply --cached --whitespace=fix;\
             git checkout -- ${1-.} \"$@\"' -"
	get = gerrit get
	repo = gerrit repo
	cleanup = gerrit cleanup
	sync = gerrit sync
	rebase-work = gerrit rebase-work
	submit = gerrit submit
	mail = gerrit mail
	pending = gerrit pending
	change = gerrit change
	gofmt = gerrit gofmt
	commit = gerrit commit

[core]
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
	pager = less -F -X
	attributesfile = ~/.gitattributes

[i18n]
    commitencoding = utf-8
[merge]
    tool = vimdiff
    conflictstyle = diff3
[rerere]
    enabled = 1
[mergetool]
	keepBackup = true
[push]
	default = simple
[http]
	cookiefile = ~/.gitcookies
[help]
	autocorrect = 10
[init]
	defaultBranch = main
